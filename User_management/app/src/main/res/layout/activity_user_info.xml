<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user_info">
    <TextView
        android:id="@+id/full_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="false"
        android:layout_marginStart="50dp"
        android:text="fullname"
        android:textSize="20sp"
        android:layout_marginTop="100dp"/>


    <TextView
        android:id="@+id/full_name2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="false"
        android:textSize="20sp"
        android:textColor="@color/colorAccent"
        android:layout_toRightOf="@+id/full_name"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="18dp"/>
    <TextView
        android:id="@+id/email"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@+id/full_name2"
        android:layout_marginStart="50dp"
        android:text="email"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/email2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_toRightOf="@+id/email"
        android:layout_below="@+id/full_name2"
        android:layout_marginStart="18dp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/mobile"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="phone"
        android:layout_below="@+id/email"
        android:layout_marginStart="50dp"
        android:textSize="20sp"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/mobile2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email2"
        android:layout_toRightOf="@id/mobile"
        android:layout_marginLeft="18dp"
        android:textSize="20dp"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/gender"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="gender"
        android:textSize="20dp"
        android:layout_below="@id/mobile"
        android:layout_marginStart="50dp"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/gender2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/mobile"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/gender"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="18dp"/>

</RelativeLayout >